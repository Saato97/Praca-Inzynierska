        <addForeignKeyConstraint baseColumnNames="teams_id"
                                 baseTableName="tournaments"
                                 constraintName="fk_tournaments_teams_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teams"/>

        <addForeignKeyConstraint baseColumnNames="matches_id"
                                 baseTableName="tournaments"
                                 constraintName="fk_tournaments_matches_id"
                                 referencedColumnNames="id"
                                 referencedTableName="matches"/>

    </changeSet>
</databaseChangeLog>
